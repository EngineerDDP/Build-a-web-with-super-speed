@model IndexViewModel
@{
    ViewData["Title"] = "账号管理";
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>更改账号设置</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">更改密码</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">设置密码</a>
            }
        </dd>
        <dt>外部登录:</dt>
        <dd>

            @Model.Logins.Count <a asp-controller="Manage" asp-action="ManageLogins" class="btn-bracketed">Manage</a>
        </dd>
        <dt>电话号码:</dt>
        <dd>
            <p>
                电话号码可作为多重验证方式的备用验证方式。
                参看 <a href="https://go.microsoft.com/fwlink/?LinkID=532713">这篇文章</a>
                了解本网站如何使用短信进行验证。
            </p>
            @*@(Model.PhoneNumber ?? "None")
                @if (Model.PhoneNumber != null)
                {
                    <br />
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">添加电话号码</a>
                    <form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post">
                        [<button type="submit" class="btn-link">移除电话号码</button>]
                    </form>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">添加电话号码</a>
                }*@
        </dd>

        <dt>多重验证：</dt>
        <dd>
            <p>
                没有多重验证配置。参看<a href="https://go.microsoft.com/fwlink/?LinkID=532713">这篇文章</a>
                进行设置。
            </p>
            @*@if (Model.TwoFactor)
                {
                    <form asp-controller="Manage" asp-action="DisableTwoFactorAuthentication" method="post" class="form-horizontal">
                        开启 <button type="submit" class="btn-link btn-bracketed">关闭</button>
                    </form>
                }
                else
                {
                    <form asp-controller="Manage" asp-action="EnableTwoFactorAuthentication" method="post" class="form-horizontal">
                        <button type="submit" class="btn-link btn-bracketed">开启</button> 关闭
                    </form>
                }*@
        </dd>
    </dl>
</div>
