@model SchoolManagement.Models.StuUser.ChoiceLesn

@{
    ViewData["Title"] = "Choice";
}

<h2>选修课程</h2>

<form asp-action="Choice">
    <div class="form-horizontal">
        <h4>详情</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="LessonName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LessonName" class="form-control" />
                <span asp-validation-for="LessonName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="选择" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
