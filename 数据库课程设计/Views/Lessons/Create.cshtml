@model SchoolManagement.Models.LesnMgmt.LesnCreate

@{
    ViewData["Title"] = "Create";
}

<h2>创建课程</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>课程信息</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Hour" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Hour" class="form-control" />
                <span asp-validation-for="Hour" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Credit" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Credit" class="form-control" />
                <span asp-validation-for="Credit" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SpecialtyName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SpecialtyName" class="form-control" />
                <span asp-validation-for="SpecialtyName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
