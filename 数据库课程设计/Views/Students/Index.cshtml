@model IEnumerable<SchoolManagement.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h2>学生信息</h2>

<p>
    <a asp-action="Create">注册新学生</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.belongs.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.belongs.Belongs.Name)
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.belongs.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.belongs.Belongs.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">编辑</a> |
                <a asp-action="Details" asp-route-id="@item.ID">详细</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">删除</a>
            </td>
        </tr>
        }
    </tbody>
</table>
