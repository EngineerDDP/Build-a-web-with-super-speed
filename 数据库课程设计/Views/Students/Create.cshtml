@model SchoolManagement.Models.StudentMgmt.StuCreate

@{
    ViewData["Title"] = "Create";
}

<h2>注册新学生</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>学生信息:</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SpecialtyName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SpecialtyName" class="form-control"/>
                <span asp-validation-for="SpecialtyName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

